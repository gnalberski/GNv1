<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/omfblackbackground"
    tools:context=".RobotsShadow">

    <TextView
        android:id="@+id/textView3"
        android:text="@string/shadow"
        android:layout_width="175dp"
        android:layout_height="65dp"
        android:layout_marginStart="202dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="508dp"
        android:autoSizeTextType="none"
        android:textAlignment="center"
        android:textColor="@color/czerwony"
        android:textSize="33dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />



    <TextView
        android:id="@+id/textView4"
        android:text="Quick and fairly powerful, Shadow is one of the easiest robots in the game to win  with. Using a combination of AI flaws and quick moves, you can easily beat the computer on the hardest difficulty level almost every time. Shadow is definitely the robot to use to find most of the games secrets, as a skilled player can almost always get a perfect, or at least near to perfect, round with it."
        android:layout_width="374dp"
        android:layout_height="240dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="224dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="87dp"
        android:autoSizeTextType="none"
        android:ems="1"
        android:textColor="@color/czerwony"
        android:textSize="19dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.596"
        />

    <ImageView
        android:id="@+id/imageView"
        app:srcCompat="@drawable/shadow3"

        android:layout_width="162dp"
        android:layout_height="213dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="221dp"
        android:layout_marginBottom="384dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <Button
        android:id="@+id/ShadowPowrot"
        android:text="BACK"
        app:layout_constraintHorizontal_bias="0.075"
        app:layout_constraintVertical_bias="0.500"
        android:background="@color/colorAccent"
        tools:background="@color/colorAccent"
        android:textColor="@color/czarny"
        android:textSize="22dp"
        android:typeface="sans"
        android:layout_width="165dp"
        android:layout_height="57dp"
        android:layout_marginTop="527dp"
        android:layout_marginEnd="10dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/ShadowDalej"
        android:text="GO TO NEXT ROBOT"
        android:onClick="Listarobotow3"
        android:background="@color/colorAccent"
        android:layout_width="165dp"
        android:layout_height="57dp"
        android:layout_marginTop="527dp"
        android:layout_marginEnd="10dp"
        android:clickable="true"
        android:textColor="@color/czarny"
        android:textSize="22dp"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.965"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.500"
        tools:background="@color/colorAccent"
        tools:ignore="onClick"
        />


    <Button
        android:id="@+id/PickRobotShadow"
        android:layout_width="176dp"
        android:layout_height="57dp"
        android:layout_marginStart="197dp"
        android:layout_marginTop="176dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="429dp"
        android:background="@color/colorAccent"
        android:clickable="true"
        android:onClick="PickRobotShadow"
        android:text="PICK ROBOT"
        android:textColor="@color/czarny"
        android:textSize="22dp"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/colorAccent"
        tools:ignore="onClick" />


</android.support.constraint.ConstraintLayout>

