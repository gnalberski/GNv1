<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/omfblackbackground"
    tools:context=".RobotsKatana">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="162dp"
        android:layout_height="213dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="221dp"
        android:layout_marginBottom="384dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/katana2"
        tools:srcCompat="@drawable/katana2" />

    <TextView
        android:id="@+id/textView225"
        android:text="KATANA"
        android:layout_width="175dp"
        android:layout_height="65dp"
        android:layout_marginStart="202dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="508dp"
        android:autoSizeTextType="none"
        android:textAlignment="center"
        android:textColor="@color/czerwony"
        android:textSize="33dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textView54"
        android:layout_width="371dp"
        android:text="Definitely one of the most enjoyable robots to play with, Katana has a well rounded variety of basic attacks and special moves, the latter of which, when used properly, can madden your human opponents to the point of less than tasteful dialogue. With some very strong attacks and a good assortment of possible combos, Katana is about the most well rounded robot to use."

        android:layout_height="255dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="224dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="87dp"
        android:autoSizeTextType="none"
        android:ems="1"
        android:textColor="@color/czerwony"
        android:textSize="19dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.596"
        />

    <Button
        android:id="@+id/KatanaPowrot"
        android:text="BACK"
        app:layout_constraintHorizontal_bias="0.075"
        app:layout_constraintVertical_bias="0.500"
        android:background="@color/colorAccent"
        tools:background="@color/colorAccent"
        android:textColor="@color/czarny"
        android:textSize="22dp"
        android:typeface="sans"
        android:layout_width="165dp"
        android:layout_height="57dp"
        android:layout_marginTop="527dp"
        android:layout_marginEnd="10dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/KatanaDalej"
        android:text="GO TO NEXT ROBOT"
        android:onClick="Listarobotow61"
        android:background="@color/colorAccent"
        android:layout_width="165dp"
        android:layout_height="57dp"
        android:layout_marginTop="527dp"
        android:layout_marginEnd="10dp"
        android:clickable="true"
        android:textColor="@color/czarny"
        android:textSize="22dp"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.965"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.500"
        tools:background="@color/colorAccent"
        tools:ignore="onClick"
        />


</android.support.constraint.ConstraintLayout>

