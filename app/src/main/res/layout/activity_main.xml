<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/omflogo6"
    tools:context=".MainActivity">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/button2"
        android:layout_width="359dp"
        android:layout_height="90dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="388dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="92dp"
        android:background="@color/czerwony"
        android:onClick="Listarobotow1"
        android:text="ROBOTS VIEW"
        android:textColor="@color/czarny"
        android:textSize="25sp"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:background="@color/colorAccent"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/button"
        android:layout_width="160dp"
        android:layout_height="68dp"
        android:layout_marginStart="231dp"
        android:layout_marginTop="555dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="36dp"
        android:background="@color/czerwony"
        android:clickable="true"
        android:onClick="clickexit"
        android:text="EXIT / BACK"
        android:textColor="@color/czarny"
        android:textSize="25dp"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/colorAccent"
        tools:text="EXIT / BACK" />


    <Button
        android:id="@+id/butmove"
        android:layout_width="160dp"
        android:layout_height="68dp"
        android:layout_marginTop="550dp"
        android:layout_marginEnd="210dp"
        android:layout_marginBottom="31dp"
        android:background="@color/czerwony"
        android:text="MUSIC


        ON/OFF"
        android:textSize="18sp"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="398dp" />

    <android.support.constraint.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="butmove" />

    <android.support.constraint.Group
        android:id="@+id/group2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="button" />

</android.support.constraint.ConstraintLayout>