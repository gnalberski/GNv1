<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/omflogo2"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/button"
        android:layout_width="377dp"
        android:layout_height="54dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="511dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="35dp"
        android:background="@color/czerwony"
        android:clickable="true"
        android:onClick="clickexit"
        android:text="EXIT / BACK"


        android:textColor="@color/czarny"
        android:textSize="22dp"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:background="@color/colorAccent"
        tools:text="EXIT / BACK" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/button2"
        android:layout_width="373dp"
        android:layout_height="86dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="381dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="135dp"
        android:background="@color/czerwony"
        android:onClick="Listarobotow1"
        android:text="ROBOTS VIEW"
        android:textColor="@color/czarny"
        android:textSize="31sp"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/colorAccent"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/butmove"
        android:layout_width="382dp"
        android:layout_height="73dp"
        android:layout_marginTop="16dp"
        android:background="@color/czerwony"
        android:text="MUSIC ON/OFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="398dp" />

</android.support.constraint.ConstraintLayout>